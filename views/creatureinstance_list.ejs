<!DOCTYPE html>
<html>
  <head>
    <%-include('./partial/head.ejs') %>
  </head>
  <body>
    <%-include('./partial/navbar.ejs') %>
    <div class="flex">
      <%-include('./partial/sidenav.ejs') %>
      <main class="px-16 py-6 flex-1">
        <header>
          <h2 class="text-gray-700 text-5xl font-semibold font-main">
            <%= title %>
          </h2>
          <h3 class="text-2xl font-semibold font-secondary">
            Browse legendary creature specifics
          </h3>
          <div class="mt-8 grid lg:grid-cols-3 gap-10">
            <% if (creatureintances_list.length > 0) { %> <%
            creatureintances_list.forEach( creatureinstance => { %>
            <div class="card hover:shadow-lg">
              <div class="m-4 mb-1 flex justify-between items-end">
                <span class="text-lg tracking-wide font-bold font-main"
                  ><%= creatureinstance.name %></span
                >

                <span class="block text-gray-500 text-sm"
                  ><%= creatureinstance.creature.name %>
                </span>
              </div>
              <img
                src="/uploads/creatureinstances/<%= creatureinstance.filepath %>"
                class="w-full h-22 sm:h-48 object-cover"
              />
              <a href="<%=creatureinstance.url%>">
                <button
                  class="absolute bottom-0 right-0 mr-3 mb-2 bg-black hover:bg-gray-900 text-white font-bold py-2 px-4 rounded font-secondary tracking-wide"
                >
                  View
                </button>
              </a>
            </div>
            <% } ) %> <%} %>
          </div>
        </header>
      </main>
    </div>
  </body>
</html>
